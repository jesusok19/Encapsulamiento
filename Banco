package Banco;

public class CuentaBancaria {
    private double saldo;

    public CuentaBancaria() {
        this.saldo = 0.0;
    }

    public void depositar(double monto) {
        if (monto > 0) {
            saldo += monto;
            System.out.println("Se depositaron $" + monto + " correctamente.");
        } else {
            System.out.println("Error: el monto a depositar debe ser mayor que 0.");
        }
    }

    public void retirar(double monto) {
        if (monto > saldo) {
            System.out.println("Fondos insuficientes. Tu saldo actual es: $" + saldo);
        } else if (monto <= 0) {
            System.out.println("El monto a retirar debe ser mayor que 0.");
        } else {
            saldo -= monto;
            System.out.println("Se retiraron $" + monto + " correctamente.");
        }
    }

    public double getSaldo() {
        return saldo;
    }
}
